<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#ffffff" />
            <gradient android:angle="-90" android:startColor="#6D6D6D" android:endColor="#6D6D6D"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#D8D8D8" />
            <solid android:color="#D8D8D8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#D8D8D8" />
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000" />
        </shape>
    </item>
</selector>
